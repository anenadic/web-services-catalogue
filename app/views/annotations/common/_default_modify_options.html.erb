<div class="actions">

  <% if mine?(annotation) && ann_type != "swo license" %>
      <%= annotation_edit_by_popup_link(annotation, :class => "button_slim") -%>
  <% end %>
  <% if BioCatalogue::Auth.allow_user_to_curate_thing?(current_user, annotation) %>
      <%= link_to("delete", annotation_path(annotation),
                  :method => :delete,
                  :confirm => "Are you sure you want to delete this #{ann_type}?",
                  :class => "button_slim")-%>
  <% end %>
</div>

